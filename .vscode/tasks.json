{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "hello_debugger.py",
      "type": "shell",
      "command": "python hello_debugger.py --name World",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}/python"
      },
      "problemMatcher": []
    },
    {
      "label": "hello-debugger.ts",
      "type": "shell",
      "command": "npm start -- -n World",
      "options": {
        "cwd": "${workspaceFolder}/typescript"
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
