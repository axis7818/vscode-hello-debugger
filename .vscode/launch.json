{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "ts-react: Hello Debugger",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "python: Hello Debugger",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/python",
      "program": "${workspaceFolder}/python/hello_debugger.py",
      "args": [
        "--name=World"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "ts-node: Hello Debugger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/ts-node",
      "args": [
        "${workspaceFolder}/ts-node/src/hello-debugger.ts",
        "--name",
        "World",
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
    },
  ]
}
