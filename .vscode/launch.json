  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Hello Debugger",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/python",
      "program": "${workspaceFolder}/python/hello_debugger.py",
      "args": [
        "--name=World"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "TypeScript: Hello Debugger",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/typescript",
      "args": [
        "${workspaceFolder}/typescript/src/hello-debugger.ts",
        "--name",
        "World",
      ],
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      // "sourceMaps": true,
      // "protocol": "inspector"
    }
  ]
}
